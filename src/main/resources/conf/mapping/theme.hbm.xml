<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >

<hibernate-mapping package="com.dome.base.model" >

    <class name="Theme"
           table="themes"
           lazy="false">

        <!-- Common id property. -->
        <id name="id"
            type="long"
            column="id"
                >
            <generator class="native"/>
        </id>

        <property   name="color"
                    type="string"
                    column="color">
        </property>

        <property   name="images"
                    type="string"
                    column="images">
        </property>



    </class>

</hibernate-mapping>