<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping SYSTEM
        "http://hibernate.sourceforge.net/hibernate-mapping-2.0.dtd" >

<hibernate-mapping package="com.dome.base.model" >

    <class name="Test"
           table="Test"
           lazy="true">

        <!-- Common id property. -->
        <id name="id"
            type="int"
            column="id"
          >
        <generator class="native"/>
        </id>
        
        <property   name="username"
                    type="int"
                    column="id">
        </property>

    </class>

</hibernate-mapping>